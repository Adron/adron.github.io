                        // End of Menu
        .header-back.header-back-simple.header-back-small
            .header-back-container
                .container
                    .row
                        .col-md-12
                            // Page Info
                            .page-info.page-info-simple
                                block header
                                    block prepend title
                                    h1= locals.name
                                    h2.description= locals.description
                            // End Page Info
        #content
            .container
                .layout.with-right-sidebar.js-layout
                    .row
                        .col-md-12
                            .main-content
                                // Blog Page
                                block content
                                // End of Blog Page
