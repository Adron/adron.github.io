        .header.header-over.large
            .container
                .row
                    .col-md-3.col-sm-6.col-xs-6
                        // Logo Image
                        a.logo-image.logo-animated(href='/index.html')
                            img(src='/img/logos/logo.png', alt='logo')
                        // End of Logo Image
                    .col-md-9.col-sm-6.col-xs-6
                        // Menu
                        nav.right.helper
                            ul.menu.sf-menu.js-menu
