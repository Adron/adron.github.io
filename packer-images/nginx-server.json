{
  "variables": {
    "account_json": "../../secrets/account.json"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `account_json`}}",
      "project_id": "that-big-universe",
      "source_image": "debian-8-jessie-v20160711",
      "zone": "us-central1-a",
      "instance_name": "hub-{{timestamp}}",
      "image_name": "hub-{{uuid}}",
      "image_description": "The workhorse server catch all. It's a crazy beast!"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 10"
      ]
    },
    {
      "type": "file",
      "source": "install-nginx.sh",
      "destination": "install-nginx.sh"
    },
    {
      "type": "shell",
      "script": "install-nginx.sh",
      "pause_before": "3s",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    }
  ]
}